<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="JobPosting"
android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="JOB POSTING"
    android:textSize="30dp"
    android:textColor="#000000"
    android:textStyle="bold"
    android:textAlignment="center"/>

<GridLayout
    android:orientation="horizontal"
    android:columnCount="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Company"
        android:layout_columnWeight="1"
        />

    <EditText
        android:id="@+id/cvEditCompany"
        android:layout_columnWeight="4"
        />

    <TextView
        android:text="Job Title"
        android:layout_columnWeight="1"
        />

    <EditText
        android:id="@+id/cvEditTitle"
        android:layout_columnWeight="4"
        />

    <TextView
        android:text="Country"
        android:layout_columnWeight="1"
        />

    <EditText
        android:id="@+id/cvEditCountry"
        android:layout_columnWeight="4"
        />

    <TextView
        android:text="Postal Code"
        android:layout_columnWeight="1"
        />

    <EditText
        android:id="@+id/cvEditCode"
        android:layout_columnWeight="4"
        />

    <TextView
        android:text="Company Address"
        android:layout_columnWeight="1"
        />

    <EditText
        android:id="@+id/cvEditAddress"
        android:layout_columnWeight="4"
        />

    <TextView
        android:text="Contact Number"
        android:layout_columnWeight="1"
        />

    <EditText
        android:id="@+id/cvEditPhone"
        android:layout_columnWeight="4"
        />

    <TextView
        android:text="Job Description"
        android:layout_columnWeight="1"
        />

    <EditText
        android:id="@+id/cvEditDetails"
        android:layout_columnWeight="4"
        />

    <TextView
        android:text="Job Requirement"
        android:layout_columnWeight="1"
        android:layout_height="30dp"
        />

    <EditText
        android:id="@+id/cvEditRequirement"
        android:layout_columnWeight="4"
        android:layout_height="60dp"
        android:singleLine="false"
        />


</GridLayout>



</LinearLayout>